// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id         Int          @id @default(autoincrement())
    firstName  String
    lastName   String
    email      String       @unique
    password   String
    verified   Boolean
    favourites Favourites[]
}

model Favourites {
    id     Int    @id @default(autoincrement())
    name   String @unique
    User   User[]
    userId Int?
}
